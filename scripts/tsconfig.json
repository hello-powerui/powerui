{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES2019"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "../.scripts-dist",
    "rootDir": ".",
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}