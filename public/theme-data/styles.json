{
    "containerStyles": {
        "default": {
            "name": "Default",
            "description": "Clean, unified containers",
            "styles": {
                "@bg-primary": [
                    "visualStyles.*.*.background[0].color.solid.color",
                    "visualStyles.page.*.background[0].color.solid.color"
                ]
            }
        },
        "subtle-contrast": {
            "name": "Subtle Contrast",
            "description": "Light contrast containers",
            "styles": {
                "@bg-primary": [
                    "visualStyles.*.*.background[0].color.solid.color"
                ],
                "@bg-primary_alt": [
                    "visualStyles.page.*.background[0].color.solid.color"
                ]
            }
        },
        "inversed-contrast": {
            "name": "Inversed Contrast",
            "description": "Stronger visual hierarchy",
            "styles": {
                "@bg-primary_alt": [
                    "visualStyles.*.*.background[0].color.solid.color"
                ],
                "@bg-primary": [
                    "visualStyles.page.*.background[0].color.solid.color"
                ]
            }
        }
    },
    "borderStyles": {
        "default": {
            "name": "Default Borders",
            "description": "Display borders with standard color",
            "styles": {
                "@border-primary": [
                    "visualStyles.*.*.border[0].color.solid.color"
                ]
            }
        },
        "subtle": {
            "name": "Subtle Borders",
            "description": "Display borders with subtle color",
            "styles": {
                "@border-tertiary": [
                    "visualStyles.*.*.border[0].color.solid.color"
                ]
            }
        },
        "none": {
            "name": "No Borders",
            "description": "Make borders match their container background",
            "styles": {
                "inherit-bg": [
                    "visualStyles.*.*.border[0].color.solid.color"
                ]
            }
        }
    },
    "paddingStyles": {
        "default": {
            "name": "Default Padding",
            "description": "Standard padding (16px)",
            "styles": {
                "16": [
                    "visualStyles.*.*.*[1].bottom",
                    "visualStyles.*.*.*[1].left",
                    "visualStyles.*.*.*[1].right",
                    "visualStyles.*.*.*[1].top"
                ]
            }
        },
        "large": {
            "name": "Large Padding",
            "description": "Increased padding (20px)",
            "styles": {
                "20": [
                    "visualStyles.*.*.*[1].bottom",
                    "visualStyles.*.*.*[1].left",
                    "visualStyles.*.*.*[1].right",
                    "visualStyles.*.*.*[1].top"
                ]
            }
        }
    }
}